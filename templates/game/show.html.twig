{% import 'game/macros/_word_to_discover.html.twig' as word %}

{% extends 'base.html.twig' %}

{% block title %} Hangman - Game {{ game.id }} {% endblock %}

{% block body %}
    <h1> Game {{ game.token }}</h1>

    <div id="game">
        <span id="attempts"> {{ game.attempts }} </span> attempts left
        <br>
        {{ word.show(game.secret) }}

        {{ form_start(form) }}
            {{ form_widget(form.letter) }}
            {{ form_row(form.submit) }}
        {{ form_end(form)}}
    </div>
{% endblock %}

